<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <style>
        body { background: #0a0a0c; color: #f5f5f7; font-family: sans-serif; margin: 0; display: flex; }
        .sidebar { width: 250px; background: #111; padding: 30px; min-height: 100vh; border-right: 1px solid #222; }
        .content { flex: 1; padding: 40px; }
        .card { background: #18181b; padding: 25px; border-radius: 15px; border: 1px solid #27272a; margin-bottom: 30px; }
        .input { width: 100%; padding: 12px; margin-bottom: 15px; background: #000; border: 1px solid #333; color: #fff; border-radius: 8px; box-sizing: border-box; }
        .btn { background: #0071e3; color: white; padding: 12px 20px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { padding: 15px; text-align: left; border-bottom: 1px solid #222; }
        th { color: #888; }
        a.danger { color: #ef4444; text-decoration: none; font-weight: bold; }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>HAMZA GSM HQ</h2>
        <hr style="border-color:#222;">
        <p>Admin Modu Aktif</p>
        <a href="/" style="color:#0071e3; text-decoration:none; display:block; margin-top:20px;">↗ Vitrine Git</a>
        <a href="/admin/logout" style="color:#ef4444; text-decoration:none; display:block; margin-top:20px;">Çıkış Yap</a>
    </div>

    <div class="content">
        <h1>Operasyon Merkezi</h1>
        
        <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 30px;">
            <div class="card">
                <h3>YENİ CİHAZ EKLE</h3>
                <form action="/admin/product/add" method="POST">
                    <input class="input" type="text" name="marka" placeholder="Marka (Örn: Apple)">
                    <input class="input" type="text" name="model" placeholder="Model (Örn: iPhone 16)">
                    <input class="input" type="number" name="fiyat" placeholder="Fiyat (TL)">
                    <input class="input" type="number" name="stok" placeholder="Stok Adedi">
                    <input class="input" type="text" name="img" placeholder="Resim URL (Link)">
                    <button class="btn" style="width: 100%;">ENVANTERE EKLE</button>
                </form>
            </div>

            <div class="card">
                <h3>ENVANTER YÖNETİMİ</h3>
                <table>
                    <tr><th>Cihaz</th><th>Fiyat</th><th>Stok</th><th>İşlem</th></tr>
                    <% db.products.forEach(function(p) { %>
                        <tr>
                            <td><strong><%= p.marka %></strong> <%= p.model %></td>
                            <td><%= p.fiyat.toLocaleString('tr-TR') %> ₺</td>
                            <td><%= p.stok %></td>
                            <td><a href="/admin/product/delete/<%= p.id %>" class="danger">SİL</a></td>
                        </tr>
                    <% }); %>
                </table>
            </div>
        </div>
    </div>
</body>
</html>